extends layout

block content
	section#intro(tabindex="0")
		div#plumnom.page-intro(aria-hidden="true")
			span.plum
				span.plumnom-inner
			span.nom
				span.plumnom-inner
		.section-inner
			h1 Stephanie <i>Plum</i>eri Ertz
			ul
				li UI Developer
				li Baker of Noms
				li Casual Economist

	section#code(tabindex="0")
		.section-inner
			h2 Code
			.content
				del I make websites
				del I make apps
				del I make art
				del I make things
				span 
					| I make things 
					b for people
					| .
				a.cta.gallery-cta(href="#code-gallery") See Portfolio

	section#code-gallery.gallery-section
		.section-inner.gallery-section-inner
			h2 Code Portfolio
			ul.gallery-content
				each project, index in data.portfolio
					li
						a(href="/code/" + index) 
							.gallery-content-inner
								span.gallery-content-image
									img(src=project.thumbnail, alt=project.thumbnail_alt)
								span.gallery-content-label= project.title

	section#confections(tabindex="0")
		.section-inner
			h2 Confections
			.content
				span Cooking is an art.
				span Baking is a science.
				span 
					| What I do with chocolate is 
					b mad science
					| .
				a.cta.gallery-cta(href="#confections-gallery") See Noms

	section#confections-gallery.gallery-section
		.section-inner.gallery-section-inner
			h2 Noms Gallery
			ul.gallery-content
				each nom, index in data.noms
					li
						a(href="/noms/" + index)
							.gallery-content-inner
								span.gallery-content-image
									img(src="/img/noms/" + index + "/thumb.jpg", alt=nom.thumbnail_alt)
								span.gallery-content-label= nom.title	


	section#contact(tabindex="0")
		.section-inner
			h2 Contact
			.content
				ul
					li
						a.icon.icon--github(href="https://github.com/s-plum", title="GitHub") GitHub
					li
						a.icon.icon--instagram(href="https://www.instagram.com/plumertzi/", title="Instagram") Instagram
					li
						a.icon.icon--download(href="/pdf/stephanie_plumeri_ertz_resume.pdf", download, title="Download Resume") Download Resume
					li
						a.icon.icon--twitter(href="https://twitter.com/s_plum", title="Twitter") Twitter
					li
						a.icon.icon--linkedin(href="https://www.linkedin.com/in/splum", title="LinkedIn") LinkedIn
					
				p#asimov
					a(href="https://en.wikipedia.org/wiki/Three_Laws_of_Robotics") Certified Three Laws Safe<sup>&reg;</sup>